page {
  padding-bottom: 90rpx;
}
.revice_wrap {
  border-bottom: 4rpx solid #666;
}
.revice_wrap .revice_btn_wrap {
  padding: 20rpx;
}
.revice_wrap .revice_btn_wrap button {
  width: 50%;
}
.cart_main .cart_main_title {
  padding: 20rpx;
  color: var(--themeColor);
  font-size: 36rpx;
  font-weight: 600;
  border-bottom: 2rpx solid #666;
}
.cart_main .cart_main_content .cart_item {
  padding: 15rpx 0;
  display: flex;
  border-bottom: 2rpx solid #666;
}
.cart_main .cart_main_content .cart_item .cart_chk_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_main .cart_main_content .cart_item .cart_img_warp {
  flex: 5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_main .cart_main_content .cart_item .cart_img_warp image {
  width: 80%;
}
.cart_main .cart_main_content .cart_item .cart_info {
  flex: 8;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_price_wrap {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_price_wrap .cart_tool {
  display: flex;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_price_wrap .cart_tool .cart_num_edit {
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_price_wrap .cart_tool .cart_num {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 15rpx;
}
.btm_tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.btm_tool .all_check_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btm_tool .total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
}
.btm_tool .total_price_wrap .total_price text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.btm_tool .cart_pay {
  flex: 2;
  background: var(--themeColor);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  font-weight: 600;
}
